doctype html
html(lang="en")
	head
		title= title
		style
			include bootstrap.css
		script
			include jquery-1.11.2.js
		script
			include bootstrap.js
	body
		.container
			.row
				.col-md-1
				.col-md-3
					form(method="post", action="/searchonly")
						.form-group
							h2 Search only
							a(href="https://dev.twitter.com/rest/public/search", target="_blank") https://dev.twitter.com/rest/public/search
							br
							br
							label Search
							input(type="text", name="search", class="form-control")
							br
							label Number of results
							input(type="text", name="count", class="form-control")
						button(type="submit", class="btn btn-primary") Search only
					br
					form(method="post", action="/searchandpost")
						.form-group
							h2 Search and post
							a(href="https://dev.twitter.com/rest/public/search", target="_blank") https://dev.twitter.com/rest/public/search
							br
							br
							label Search
							input(type="text", name="search", class="form-control")
							br
							label Tweet content
							textarea(rows="3", name="tweetcontent", class="form-control", maxlength="120")
							br
							label Number of tweets targetted
							input(type="text", name="count", class="form-control")
						button(type="submit", class="btn btn-primary") Search and post
					br
				.col-md-7
					if total
						h2= total + ' tweets sent'
					if tweets
						table(class="table table-hover", style="margin-top: 20px;")
							each tweet in tweets
								tr
									td
										a(href="https://twitter.com/" + tweet.user.screen_name + "/status/" +  tweet.id_str, target="_blank") Link
									td=	tweet.text
									td= tweet.created_at
				.col-md-1